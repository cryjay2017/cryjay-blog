<div class="container">
  <div class="row">
    <div class="col-md-9 col-md-offset-1">
      <h1>Show Post</h1>
      <%= image_tag @post.image.url(:medium) %>
      <h3><%= @post.title %></h3>
      <p><%= @post.content %></p>
      <p><%= @post.author %></p>
      <div id="comments">
        <h2><%= @post.comments.count %> Comments</h2>
        <%= render @post.comments %>
        <h3>Add a comment:</h3>
        <%= render 'comments/form' %>
      </div>
      <div class="panel-block likes data">
        <% if user_signed_in? %>
          <%= link_to like_post_path(@post), method: :get, class: "btn btn-default" do %>
            <span class="icon"><i class="glyphicon glyphicon-heart"></i></span>
            <span class="vote_count"><%= pluralize(@post.get_upvotes.size, 'Like') %></span>
          <% end %>
          <%= link_to dislike_post_path(@post), method: :get, class: "btn btn-default" do %>
            <span class="icon"><i class="glyphicon glyphicon-heart-empty"></i></span>
            <span class="vote_count"><%= pluralize(@post.get_downvotes.size, 'disLike') %></span>
          <% end %>
        <% else %>
          <%= link_to like_post_path(@post), method: :get, class: "btn btn-default" do %>
            <span class="icon"><i class="glyphicon glyphicon-heart"></i></span>
            <span class="vote_count"><%= pluralize(@post.get_upvotes.size, 'Like') %></span>
          <% end %>
        <% end %>
      </div>
      <%= link_to 'Edit', edit_post_path(@post) %> |
      <%= link_to 'Back', posts_path %>
    </div>
  </div>
</div>




