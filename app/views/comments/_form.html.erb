<%= form_for ([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, id: :comment_title %>
  </div>
  
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, id: :comment_body %>
  </div>
  
  <div class="field">
    <%= f.submit %>
  </div>  
<% end %>
